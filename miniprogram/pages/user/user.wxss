/* pages/user/user.wxss */
.user{
  background: #fafafa;
  height: 100vh
}
.loginBox{
  margin: 10px 0 30px;
  background: #fff;
  padding-bottom: 10px;
}
.userphoto{
  text-align: center;
}
.userphoto image{
  width: 60px;
  height: 60px;
  margin: 10px 0 0;
  border-radius: 4px;
  border: 1rpx solid #999;
}
.username{
  color:#1a2849;
  text-align: center;
  font-size: 20px;
}
.usericon{
  text-align: center;
  font-size: 13px;
  color: #ff6361
}
.tologin{
  text-align: center;
  width: 75px;
  margin: 0 auto;
}
.tologin navigator{
  padding: 8px 5px;
}
.Item{
  background: #fff;
  margin-bottom: 20px;
}
.userItem{
  display: flex;
  height: 55.5px;
}
.userItem image{
  width: 20px;
  height: 20px;
  margin: 0 15px;
  padding: 15px 0;
  position: relative;
  top: 4px;
}
.userItem-text{
  display: inline-block;
  flex: 1;
  border-bottom: .5px solid #efefef;
}
.userItem:last-child .userItem-text{
  border: 0;
}
.Item button{
  background: #fff;
  font-weight: 400;
  width: 100%;
  margin: 0;
  padding: 15px 0 15px 8px;
  text-align: left;
  min-height: auto;
}
.Item navigator{
  padding: 15px 0 15px 8px;
}

.clickBtn{
  color: #999;
}